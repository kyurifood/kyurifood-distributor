<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.artivisi.android.kyurifood.distributor.fragments.LaporanFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="LAPORAN"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAPORAN TRANSAKSI PER PRODUK"
        android:id="@+id/btLTPP"
        android:layout_above="@+id/LTPM"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#75e473" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAPORAN TRANSAKSI PER MAKETER"
        android:id="@+id/LTPM"
        android:layout_above="@+id/btLTPD"
        android:layout_alignRight="@+id/btLTPP"
        android:layout_alignEnd="@+id/btLTPP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#75e473" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAPORAN TRANSAKSI PER DISTRIBUTOR"
        android:id="@+id/btLTPD"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#75e473" />

</RelativeLayout>
